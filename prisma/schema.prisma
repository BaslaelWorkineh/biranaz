// BR: the member limit for Teams is decided by the type of plan the users are subscribing to
model Team {
  id String @id @default(uuid())
  name String @unique
  description String?
  members User[]
  workspaces Workspace[]//not quite sure about this one :|
  
}



model Node {
  id String @id
  type NodeType
  properties Json

  //references 
  diagramId String
  diagram Diagram @relation(fields: [diagramId],references: [id],onDelete: Cascade,onUpdate: Cascade)
  //temporal informations
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model Edge {
  id String @id
  type EdgeType
  properties Json

  //references 
  diagramId String
  diagram Diagram @relation(fields: [diagramId],references: [id],onDelete: Cascade,onUpdate: Cascade)
}


//enums
enum DiagramType {
  FLOW_DIAGRAM
  KNOWLEDGE_DIAGRAM
  MIND_MAP_DIAGRAM
  PRIORITY_DIAGRAM
}

enum NodeType {
  DOCUMENT
  SCHEDULE
  REMINDER
  KNOWLEDGE
  CONDITION
  SIDE_EFFECT
}

enum EdgeType {
  BUTTON_EDGE
  BI_DIRECTIONAL
}


model Invitation {
  id String @id @default(uuid())
  senderId String
  recieverId String
  teamId String
  sender User @relation("Invite_sender",fields:[senderId],references: [id])
  reciever User @relation("Invite_reciever",fields: [recieverId],references: [id])

  
}

